@model ZS_SmartCheckIn.Models.Entity.Ent_Branch
@{
    ViewBag.Title = "FRRO";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="../../Scripts/ajax/frro.js"></script>
<!-- BEGIN BREADCRUMB -->
<div class="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="#">Masters</a>
        </li>
        <li class="active">FRRO Master</li>
    </ul>
</div>
<!-- END BREADCRUMB -->

<div class="page-header title">
    <!-- PAGE TITLE ROW -->
    <h1>
        FRRO Credentials
        @*<span class="sub-title">general elements, css only</span>*@
    </h1>
</div>


<!-- START YOUR CONTENT HERE -->
<div class="messagebox"></div>
<div class="row" id="myDiv">
    <div class="col-lg-12">
        <div class="portlet">
            <div class="portlet-heading dark">
                <div class="portlet-title">
                    <h4>FRRO</h4>
                </div>
                <div class="portlet-widgets">
                    <a data-toggle="collapse" data-parent="#accordion" href="#f-3"><i class="fa fa-chevron-down"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="f-3" class="panel-collapse collapse in">
                <div class="portlet-body">
                    <form class="form-horizontal " role="form" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Username<span class="red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="FRROUsername" placeholder="Enter FRRO Username" autocomplete="off" value="@Model.FRRO_Username">
                            </div>
                            <div class="col-sm-4">  <span id="validUser" class="requiredv" style="color:red"></span></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Password<span class="red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="FRROPassword" placeholder="Enter FRRO Password" value="@Model.FRRO_Password">
                            </div>
                            <div class="col-sm-4">  <span id="validPassword" class="requiredv" style="color:red"></span></div>
                        </div>
                        <div class="form-actions">
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="button" id="btn-loading" data-loading-text="Please wait..." class="btn btn-primary btnAddFRRO">Submit</button>
                                    <button type="submit" class="btn">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('ul#masters').addClass('in');
    $('ul#guestslist').removeClass('in');
    $('ul#reportlist').removeClass('in');
</script>
