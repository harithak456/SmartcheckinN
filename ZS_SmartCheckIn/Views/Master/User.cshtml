@model ZS_SmartCheckIn.Models.Entity.Ent_User
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<ZS_SmartCheckIn.Models.Entity.Ent_Branch> listBranch = ViewBag.listBranch;
    var i = 0;
}
<script src="../../Scripts/ajax/user.js"></script>
<!-- BEGIN BREADCRUMB -->
<div class="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="#">Masters</a>
        </li>
        <li class="active">User Master</li>
    </ul>
</div>
<!-- END BREADCRUMB -->

<div class="page-header title">
    <!-- PAGE TITLE ROW -->
    <h1>
        User Profile
        @*<span class="sub-title">general elements, css only</span>*@
    </h1>
</div>


<!-- START YOUR CONTENT HERE -->
<div class="messagebox"></div>
<div class="row" id="myDiv">
    <div class="col-lg-12">
        <div class="portlet">
            <div class="portlet-heading dark">
                <div class="portlet-title">
                    <h4>User Details</h4>
                </div>
                <div class="portlet-widgets">
                    <a data-toggle="collapse" data-parent="#accordion" href="#f-3"><i class="fa fa-chevron-down"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="f-3" class="panel-collapse collapse in">
                <div class="portlet-body">
                    <form class="form-horizontal " role="form" method="post">
                        <input type="hidden" id="User_ID" value="@Model.User_ID" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Branch</label>
                            <div class="col-sm-4">
                                <select class="form-control" id="branch">
                                    @foreach (var item in listBranch)
                                    {
                                        <option value="@item.Branch_ID">@item.Branch_Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name<span class="red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Name" value="@Model.User_Name" placeholder="Enter Name">
                            </div>
                            <div class="col-sm-4">  <span id="validName" class="requiredv" style="color:red"></span></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">User Type</label>
                            <div class="col-sm-4">
                                <select id="UserType" class="form-control">
                                    <option @(Model.User_Type == "Admin" ? "selected" : "") value="Admin">Admin</option>
                                    <option @(Model.User_Type == "Staff" ? "selected" : "") value="Staff">Staff</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Username<span class="red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="UserUsername" placeholder="Enter Username" autocomplete="off" value="@Model.User_Username">
                            </div>
                            <div class="col-sm-4">  <span id="validUser" class="requiredv" style="color:red"></span></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Password<span class="red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="UserPassword" placeholder="Enter Password" value="@Model.User_Password">
                            </div>
                            <div class="col-sm-4">  <span id="validPassword" class="requiredv" style="color:red"></span></div>
                        </div>
                        @*<div class="form-group">
                                <label class="col-sm-2 control-label">Confirm Password<span class="red">*</span></label>
                                <div class="col-sm-4">
                                    <input type="password" class="form-control" id="ConfirmPassword" placeholder="Enter Password" value="@Model.User_Password">
                                </div>
                            </div>*@
                        <div class="form-actions">
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="button"  id="btn-loading" data-loading-text="Please wait..." class="btn btn-primary btnAddUser">Submit</button>
                                    <button type="submit" class="btn">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('ul#masters').addClass('in');
    $('ul#reportlist').removeClass('in');
    $('ul#guestslist').removeClass('in');
</script>